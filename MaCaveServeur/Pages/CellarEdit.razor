@page "/cellar/edit/{Id:guid}"
@using MaCaveServeur.Models
@inject MaCaveServeur.Services.CellarService CellarSvc
@inject MaCaveServeur.Services.SupplierService SupplierSvc
@inject NavigationManager Nav

<h3>Modifier une bouteille</h3>

@if (loading)
{
    <p>Chargement…</p>
}
else if (bottle is null)
{
    <div class="alert alert-warning">Bouteille introuvable.</div>
}
else
{
    <EditForm Model="bottle" OnValidSubmit="Save">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Nom (cuvee) *</label>
                <InputText class="form-control" @bind-Value="bottle.Name" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Producteur</label>
                <InputText class="form-control" @bind-Value="bottle.Producer" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Appellation</label>
                <InputText class="form-control" @bind-Value="bottle.Appellation" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Couleur</label>
                <InputText class="form-control" @bind-Value="bottle.Color" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Millésime</label>
                <InputNumber class="form-control" @bind-Value="bottle.Vintage" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Cépages</label>
                <InputText class="form-control" @bind-Value="bottle.Grapes" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Pays</label>
                <InputText class="form-control" @bind-Value="bottle.Country" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Région</label>
                <InputText class="form-control" @bind-Value="bottle.Region" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Fournisseur (depuis la base)</label>
                <select class="form-select" @bind="bottle.Supplier">
                    <option value="">— Choisir —</option>
                    @foreach (var s in suppliers)
                    {
                        <option value="@s.Name">@s.Name</option>
                    }
                </select>
                <div class="form-text">
                    La liste provient de <code>/suppliers</code> (import Excel / CRUD). La valeur enregistrée est le <strong>nom</strong> du fournisseur.
                </div>
            </div>

            <div class="col-md-2">
                <label class="form-label">Quantité</label>
                <InputNumber class="form-control" @bind-Value="bottle.Quantity" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Seuil alerte</label>
                <InputNumber class="form-control" @bind-Value="bottle.LowStockThreshold" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Prix achat (€)</label>
                <InputNumber class="form-control" @bind-Value="bottle.PurchasePrice" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Prix vente (€)</label>
                <InputNumber class="form-control" @bind-Value="bottle.SalePrice" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Établissement / Site</label>
                <InputText class="form-control" @bind-Value="bottle.Location" />
            </div>

            <div class="col-md-12">
                <label class="form-label">Notes</label>
                <InputText class="form-control" @bind-Value="bottle.Notes" />
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-success" type="submit">Enregistrer</button>
            <button class="btn btn-outline-secondary" type="button" @onclick="Back">Annuler</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public Guid Id { get; set; }

    bool loading = true;
    Bottle? bottle;
    List<MaCaveServeur.Models.Supplier> suppliers = new();

    protected override async Task OnInitializedAsync()
    {
        // charge la bouteille
        bottle = CellarSvc.Get(Id);

        // charge la liste des fournisseurs (importés/CRUD)
        suppliers = await SupplierSvc.AllAsync();

        loading = false;
    }

    async Task Save()
    {
        if (bottle is null) return;
        CellarSvc.Upsert(bottle);
        await Task.CompletedTask;
        Back();
    }

    void Back() => Nav.NavigateTo("/cellar");
}
