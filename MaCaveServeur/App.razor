@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(App).Assembly">
  <Found Context="routeData">
    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MaCaveServeur.Shared.MainLayout)" />
    <FocusOnNavigate RouteData="@routeData" Selector="h1" />
  </Found>
  <NotFound>
    <LayoutView Layout="@typeof(MaCaveServeur.Shared.MainLayout)">
      <div class="card">
        <h1>Page introuvable</h1>
        <p>Le chemin demande n'existe pas.</p>
      </div>
    </LayoutView>
  </NotFound>
</Router>
