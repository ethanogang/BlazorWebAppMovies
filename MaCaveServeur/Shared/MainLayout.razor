@inherits LayoutComponentBase

<div class="min-h-screen bg-gradient-dark text-white">
    <div class="flex">

        <!-- Sidebar -->
        <aside class="hidden md:block w-72 p-4">
            <div class="glass-panel p-4">
                <div class="text-xl font-bold">🍷 Ma Cave</div>
                <div class="text-white/60 text-sm mt-1">Gestion multi-sites</div>
            </div>

            <div class="mt-4 glass-panel p-3">
                <NavMenu />
            </div>

            <div class="mt-4 glass-panel p-4 text-white/70 text-sm">
                <div class="font-semibold text-white">Raccourcis</div>
                <div class="mt-2 space-y-1">
                    <div>• <span class="kbd">/dashboard</span></div>
                    <div>• <span class="kbd">/cellar</span></div>
                    <div>• <span class="kbd">/cellar/new</span></div>
